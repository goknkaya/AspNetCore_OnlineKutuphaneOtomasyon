@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Kütüphane</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            margin: 0;
            font-size: 3rem;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
        }

            .card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .card img {
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
                height: 200px;
                object-fit: cover;
            }
    </style>
</head>
<body>

    <header>
        <h1>Online Kütüphane</h1>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1532012197267-da84d127e765?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Popüler Kitaplar">
                    <div class="card-body">
                        <h5 class="card-title">Popüler Kitaplar</h5>
                        <p class="card-text">En çok okunan kitapları keşfedin.</p>
                        <a href="#" class="btn btn-primary">Daha Fazla</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Yeni Gelenler">
                    <div class="card-body">
                        <h5 class="card-title">Yeni Gelenler</h5>
                        <p class="card-text">Son eklenen kitapları görüntüleyin.</p>
                        <a href="#" class="btn btn-primary">Daha Fazla</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1455390582262-044cdead277a?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Yazarlar">
                    <div class="card-body">
                        <h5 class="card-title">Yazarlar</h5>
                        <p class="card-text">Ünlü yazarlar ve eserlerini keşfedin.</p>
                        <a href="#" class="btn btn-primary">Daha Fazla</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>