@model List<Kiralama>

@if (TempData["basarili"] != null)
{
    <h4 style="color:red">@TempData["basarili"]</h4>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Kiralamaları</h1>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>OgrenciId</th>
                <th>KitapId</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiralama in Model)
            {
                <tr>
                    <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>
                    <td><a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-Id="@kiralama.Id" type="button" class="btn btn-warning" style="width:150px">Guncelle</a></td>
                    <td><a asp-controller="Kiralama" asp-action="Sil" asp-route-Id="@kiralama.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Kiralama Kaydı Oluştur
            </a>
        </div>
    </div>

</div>